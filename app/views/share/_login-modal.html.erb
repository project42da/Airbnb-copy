<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-body">
        <%=link_to user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-wide btn-facebook", style: "margin-bottom: 5px;" do%>
          <i class="fa fa-facebook" aria-hidden="true"></i> 페이스북 계정으로 로그인
        <%end%>
        <%=link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-wide btn-google" do %>
          <i class="fa fa-google" aria-hidden="true"></i> 구글 계정으로 로그인
        <%end%>
        <div class="signup-or-separator">
          <span class="h6 signup-or-separator--text">또는</span>
          <hr>
        </div>

      <!-- devise new_session -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true , placeholder: "이메일 주소", class: "form-control form-sign"%>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off" , placeholder: "비밀번호", class: "form-control form-sign"%>
        </div>
        
        <hr>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label "비밀번호 저장" %>
          </div>
        <% end -%>
        
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <p><%= link_to "로그인하실 수 없나요?", new_password_path(resource_name),  class: "font-green" %><br /></p>
        <% end %>


        <div class="actions">
          <%= f.submit "로그인", class: "btn btn-lg btn-wide btn-green" %>
        </div>
        
        <hr>

        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          에어비앤비 계정이 없으세요? <%= link_to "회원가입", new_registration_path(resource_name) %><br />
        <% end -%>

      <% end %>

      </div> 
      <!-- modal-body end -->

    </div>
  </div>
</div>